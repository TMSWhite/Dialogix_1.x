<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>
    <servlet>
        <servlet-name>
            Dialogix
        </servlet-name>
        <servlet-class>
            org.dianexus.triceps.LoginTricepsServlet
        </servlet-class>
        <init-param>
            <param-name>dialogix.dir</param-name>
            <param-value>@@DIALOGIX.DIR@@</param-value>
        </init-param>   
        <init-param>
            <param-name>scheduleSrcDir</param-name>
            <param-value>Wave6/WEB-INF/schedules/</param-value>
        </init-param>
        <init-param>
            <param-name>workingFilesDir</param-name>
            <param-value>Wave6/WEB-INF/working/</param-value>
        </init-param>
        <init-param>
            <param-name>completedFilesDir</param-name>
            <param-value>Wave6/WEB-INF/completed/</param-value>
        </init-param>
        <init-param>
            <param-name>imageFilesDir</param-name>
            <param-value>/images/</param-value>
        </init-param>
        <init-param>
            <param-name>helpIcon</param-name>
            <param-value>help_true.gif</param-value>
        </init-param>
        <init-param>
            <param-name>logoIcon</param-name>
            <param-value>cpmc_dmi.jpg</param-value>
        </init-param>
        <init-param>
            <param-name>floppyDir</param-name>
            <param-value>@@FLOPPY.DIR@@</param-value>
        </init-param>
        
        <!-- Login (username / password / filename) -->
        <init-param>
            <param-name>loginInfoFile</param-name>
            <param-value>@@DIALOGIX.DIR@@Wave6/WEB-INF/loginInfoFile.txt</param-value>
        </init-param>        
    </servlet>
</web-app>


